{{!-- Parameters --}}
{{!-- 
resumen = datos descriptivos
actual = datos mes actual
anterior = datos mes anterios
acumulado = datos mes acumulado

 --}}
{{!-- Tile --}}
<div class="tile is-parent modal-button" data-target="{{resumen.id}}" aria-haspopup="true">
  <article class="tile is-child notification has-background-grey has-text-centered">
    <div class="content">
      <figure class="image is-128x128">
        <img src="/img/{{resumen.id}}.png">
      </figure>
      <div class="content">
        <p class="has-text-grey-light">{{resumen.eje}}</p>
      </div>
    </div>
  </article>
</div>
{{!-- Modal --}}
<div id="{{resumen.id}}" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <div class="modal-card-title">
        {{fa-icon "twitter"}}
        {{fa-icon "facebook"}}
      </div>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <div class="content">
        {{!-- header --}}
        {{#bulma-columns class="modal-header is-primary"}}
          {{#bulma-column is4=true class="has-text-centered"}}
            <img src="/img/{{resumen.id}}-r.png" alt="">
          {{/bulma-column}}
          {{#bulma-column class="has-text-centered-mobile"}}
            <h4 class="title">{{resumen.eje}}</h4>
            <p><strong>Descripci√≥n:</strong><br>
              {{resumen.descripcion}}
            </p>
              <a href="{{actual.enlaceInforme}}" target="_blank">{{bulma-button label="Descargar informe actual" isMedium=true}}</a>
              <a href="{{actual.enlaceCSV}}" target="_blank">{{bulma-button label="Informe de datos (CSV)" isMedium=true}}</a>
          {{/bulma-column}}
        {{/bulma-columns}}
        {{!-- data-general --}}
        {{#bulma-columns class="modal-general has-text-centered has-background-grey-lighter"}}
          {{#bulma-column}}
            <h6>Ingresados mes anterior</h6>
            {{bulma-tag tag=anterior.total isLarge=true}}
          {{/bulma-column}}
          {{#bulma-column}}
            <h6>Ingresados mes actual</h6>
            {{bulma-tag tag=actual.total isLarge=true}}
          {{/bulma-column}}
          {{#bulma-column}}
            <h6>Ingresados acumulado</h6>
            {{bulma-tag tag=acumulado.total isLarge=true}}
          {{/bulma-column}}
        {{/bulma-columns}}
        {{#bulma-columns class="has-text-centered modal-general"}}
          {{#bulma-column}}
            <h6>*Actualizado el {{actual.temporalidad}} </h6>
          {{/bulma-column}}
        {{/bulma-columns}}
        {{!-- data-tabs --}}
        {{#bulma-columns class="modal-data"}}
          {{#bulma-column}}
            <div class="tabs is-fullwidth" id="tabs">
              <ul>
                <li class="is-active" data-tab="1">
                  <a>
                    {{!-- 4 --}}
                    <span>Mes actual</span>
                  </a>
                </li>
                <li data-tab="2">
                  <a>
                    {{!-- 3 --}}
                    <span>Mes anterior</span>
                  </a>
                </li>
                <li data-tab="3">
                  <a>
                    {{!-- 0 --}}
                    <span>Acumulado</span>
                  </a>
                </li>
              </ul>
            </div>
            <div id="tab-content">
              <p class="is-active" data-content="1">
                {{#bulma-table isStriped=true class="is-fullwidth"}}
                  <thead>
                    <tr>
                      <th>Tipo de expediente</th>
                      <th>No.</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each-in actual.data as |key value|}}
                      <tr>
                        <td><h6>{{key}}</h6>{{bulma-progress isPrimary=true value=value max=100}}</td>
                        <td class="has-text-centered">{{value}}</td>
                      </tr>
                    {{/each-in}}
                    <tr>
                      <td><h6>Total</h6>{{bulma-progress isPrimary=true value=actual.total max=100}}</td>
                      <td class="has-text-centered">{{actual.total}}</td>
                    </tr>
                  </tbody>
                {{/bulma-table}}
              </p>
              <p data-content="2">
                {{#bulma-table isStriped=true class="is-fullwidth"}}
                  <thead>
                    <tr>
                      <th>Tipo de expediente</th>
                      <th>No.</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each-in anterior.data as |key value|}}
                      <tr>
                        <td><h6>{{key}}</h6>{{bulma-progress isPrimary=true value=value max=100}}</td>
                        <td class="has-text-centered">{{value}}</td>
                      </tr>
                    {{/each-in}}
                    <tr>
                      <td><h6>Total</h6>{{bulma-progress isPrimary=true value=anterior.total max=100}}</td>
                      <td class="has-text-centered">{{anterior.total}}</td>
                    </tr>
                  </tbody>
                {{/bulma-table}}
              </p>
              <p data-content="3">
                {{#bulma-table isStriped=true class="is-fullwidth"}}
                  <thead>
                    <tr>
                      <th>Tipo de expediente</th>
                      <th>No.</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each-in acumulado.data as |key value|}}
                      <tr>
                        <td><h6>{{key}}</h6>{{bulma-progress isPrimary=true value=value max=100}}</td>
                        <td class="has-text-centered">{{value}}</td>
                      </tr>
                    {{/each-in}}
                    <tr>
                      <td><h6>Total</h6>{{bulma-progress isPrimary=true value=acumulado.total max=100}}</td>
                      <td class="has-text-centered">{{acumulado.total}}</td>
                    </tr>
                  </tbody>
                {{/bulma-table}}
              </p>
            </div>

          {{/bulma-column}}
        {{/bulma-columns}}
      </div>
    </section>
  </div>
</div>
